<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div style="position:absolute;display:block;z-index:30">
        <nav class="navbar navbar-inverse" style="background-color: #333;top: 0;position:fixed;width:100%">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href='@Url.Action("Index", "Home")'>Shpping List</a>
                </div>
            </div>
        </nav>
    </div>


    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Shopping Application</p>
        </footer>
    </div>
</body>
</html>